@page "/nav"
@using EmployeeManagementSystem.Client.ApplicationStates
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    Welcome, @context.User.Identity!.Name
                </a>
            </div>
        </div>

        <div class="nav-scrollable">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" href="/home/dashboard">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" style="cursor: pointer;" href="javascript:void()" @onclick="ShowAdminMenuContainer">
                        <div class="hstack gap-1">
                            <span class="bi bi-person-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                            <span>Administration</span>
                        </div>
                    </NavLink>
                    <a class="nav-link p-2 text-white" style="margin-left:1rem;cursor: pointer; visibility:@CssStyle" @onclick="UserClicked">
                        <div class="hstack">
                            <span class="bi bi-people fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                            <span>Users</span>
                        </div>
                    </a>
                </div>
                <div class="nav-item px-3" style="margin-top: @DepartmentMargin">
                    <NavLink class="nav-link p-2" style="cursor: pointer;" href="javascript:void()" @onclick="ShowDepartmentContainer">
                        <div class="hstack gap-1">
                            <span class="bi bi-backpack4-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                            <span>Management</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="margin-left:1rem; visibility:@DepartmentCssStyle">
                        <ul class="list-group">
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="GeneralDepartmentClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>General Department</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none;cursor: pointer;">
                                <a class="nav-link p-2" @onclick="DepartmentClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-subtract fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>Department</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="BranchClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-chevron-bar-contract fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>Branch</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none">
                                <hr />
                            </li>
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="CountryClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-geo-alt fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>Country</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="CityClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-pin-map fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>City</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="TownClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-geo fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>Town</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style: none">
                                <hr />
                            </li>
                            <li style="list-style: none; cursor: pointer;">
                                <a class="nav-link p-2" @onclick="EmployeeClicked">
                                    <div class="hstack text-wrap">
                                        <span class="bi bi-people fs-5 text-center" aria-hidden="true" style="margin-top: -2rem;"></span>
                                        <span>Employee</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string CssStyle = "hidden";
    private string DepartmentMargin = "-3.5rem";
    private string DepartmentCssStyle = "hidden";
    private bool ShowHide = false;
    private bool ShowHideDepartment = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            DepartmentMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            DepartmentMargin = "-3.5rem";
            CssStyle = "hidden";
        }
    }

    private void ShowDepartmentContainer()
    {
        ShowHideDepartment = !ShowHideDepartment;
        if (ShowHideDepartment)
            DepartmentCssStyle = "visible";
        else
            DepartmentCssStyle = "hidden";
    }

    #region GeneralDepartment / Department / Branch
    private void GeneralDepartmentClicked() => allState.GeneralDepartmentClicked();

    private void DepartmentClicked() => allState.DepartmentClicked();

    private void BranchClicked() => allState.BranchClicked();
    #endregion
    
    #region Country / City / Town
    private void CountryClicked() => allState.CountryClicked();

    private void CityClicked() => allState.CityClicked();

    private void TownClicked() => allState.TownClicked();
    #endregion

    #region Employee
    private void EmployeeClicked() => allState.EmployeeClicked();
    #endregion

    #region User
    private void UserClicked() => allState.UserClicked();
    #endregion
}
