@using Syncfusion.Blazor.DropDowns
<SfDialog Width="350" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog"></DialogEvents>
    <DialogTemplates>
        <Header>@Title City</Header>
        <Content>
            <EditForm Model="City" Enhance OnSubmit="Save">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Id</label>
                            <input @bind="City.Id" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <InputText @bind-Value="City.Name" class="form-control" />
                        </div>
                        <div class="form-group mt-3 mb-3">
                            <label class="form-label">Select General Department</label>
                            @if (City.Country != null)
                            {
                                string selected = City.Country!.Name;
                                <SfDropDownList TValue="string" TItem="Country" Placeholder="@selected" DataSource="ListCountry">
                                    <DropDownListFieldSettings Value="Id" Text="Name"></DropDownListFieldSettings>
                                    <DropDownListEvents TValue="string" TItem="Country" ValueChange="OnValueChange"></DropDownListEvents>
                                </SfDropDownList>
                            }
                            else
                            {
                                <SfDropDownList TValue="string" TItem="Country" Placeholder="Select Department" DataSource="ListCountry">
                                    <DropDownListFieldSettings Value="Id" Text="Name"></DropDownListFieldSettings>
                                    <DropDownListEvents TValue="string" TItem="Country" ValueChange="OnValueChange"></DropDownListEvents>
                                </SfDropDownList>
                            }
                        </div>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="Save" Type="ButtonType.Submit" IsPrimary="true" OnClick="Save" />
    </DialogButtons>
</SfDialog>

@code {
    [Parameter]
    public City City { get; set; } = new();
    [Parameter]
    public List<Country> ListCountry { get; set; } = new();
    [Parameter]
    public EventCallback<City> HandleSaveOperationEvent { get; set; }

    private bool IsVisible { get; set; } = false;
    public string Title { get; set; } = "Add";

    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void ChangeTitle(string title)
    {
        Title = title;
        StateHasChanged();
    }

    private async Task Save()
    {
        if (string.IsNullOrEmpty(City.Name) || City.CountryId <= 0)
        {
            await dialogService.AlertAsync("You need to provide City Name", "Alert!");
        }
        else
        {
            await HandleSaveOperationEvent.InvokeAsync(City);
        }
    }

    public void OnValueChange(ChangeEventArgs<string, Country> e)
    {
        City.CountryId = int.Parse(e.Value);
        StateHasChanged();
    }
}
